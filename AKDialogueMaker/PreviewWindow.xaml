<Window x:Class="AKDialogueMaker.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dialogue Preview" Height="736" Width="638" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Window.Background>
        <ImageBrush ImageSource="DialogueTemplate.png"/>
    </Window.Background>
    <Grid>
        <Label x:Name="NameLabel" Foreground="Yellow" Content="" Padding="5,5,5,5" Margin="10,0,10,190" Height="28" VerticalAlignment="Bottom" FontSize="16"/>
        <RichTextBox x:Name="PreviewTextBox" IsReadOnly="True" BorderBrush="Transparent" Background="Transparent" Margin="10,0,10,55" Height="137" VerticalAlignment="Bottom" FontSize="16">
            <FlowDocument>
                <Paragraph Foreground="White" Padding="0,5">
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
